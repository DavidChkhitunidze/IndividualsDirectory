@using IndividualsDirectory.Models.Delete

@model DeleteIndividualViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<center>
    <h1>Delete Individual</h1>
    <h2 class="text-danger">Are you sure you want to delete individual?</h2>
    <form asp-action="Delete" method="post">
        <input asp-for="Id" hidden />
        <input asp-for="Image" hidden />
        <a asp-action="Index" class="btn btn-outline-secondary" value="No">No</a>
        <input type="submit" class="btn btn-outline-secondary" value="Yes">
    </form>
</center>
