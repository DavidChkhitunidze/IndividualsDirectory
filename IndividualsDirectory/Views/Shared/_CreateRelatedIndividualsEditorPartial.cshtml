@using IndividualsDirectory.Models.Create
@using HtmlHelpers.BeginCollectionItemCore

@model CreateRelatedIndividualViewModel

<div class="form-group row">
    @using (Html.BeginCollectionItem(nameof(CreateIndividualViewModel.RelatedIndividuals)))
    {
        <label class="col-lg-1 col-form-label-sn form-control-label">Individual</label>
        <div class="col-lg-4">
            <select asp-for="RelatedToId" class="form-control relatedIndividuals">
                @if (Model?.RelatedToId != null)
                {
                    <option value="@Model.RelatedToId"></option>
                }
                else
                {
                    <option></option>
                }
            </select>
            <span asp-validation-for="RelatedToId" class="text-danger"></span>
        </div>
        <label class="col-lg-1 col-form-label-sm form-control-label">Type</label>
        <div class="col-lg-4">
            <select asp-for="RelatedIndividualType" asp-items="Html.GetEnumSelectList<RelatedIndividualType>()" class="form-control form-control-sm">
                <option value="">Choose...</option>
            </select>
            <span asp-validation-for="RelatedIndividualType" class="text-danger"></span>
        </div>

        <button type="button" class="col-lg-2 btn btn-outline-secondary btn-sm" onclick="$(this).parent().remove();">Delete</button>
    }
</div>
